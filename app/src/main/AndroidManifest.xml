        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activity.FullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/Theme.Design.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.WebContentActivity" android:theme="@style/Theme.Design.NoActionBar" />
        <activity android:name=".Activity.HeroDetailActivity" android:theme="@style/Theme.Design.NoActionBar" />
        <activity android:name=".Activity.TwitchWebActivity"
            android:theme="@style/Theme.Design.NoActionBar"
            android:screenOrientation="landscape"/>
        <activity android:name=".Activity.TwitterWebActivity" android:theme="@style/Theme.Design.NoActionBar" />
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="d9da19f40bf15ac376ed87dc2deef2168ebf7a1e" />
    </application>

</manifest>
